{
  "permissions": {
    "allow": [
      "WebSearch",
      "WebFetch",
      "mcp__context7",
      "mcp__playwright",
      "mcp__magicuidesign",
      "Bash(bun list:*)",
      "Bash(bunx shadcn@latest add:*)",
      "Bash(bun run build:*)",
      "Bash(bun add:*)",
      "Bash(bun run lint:*)",
      "Bash(bun run format:*)",
      "Bash(bun run format-check:*)",
      "Bash(cat:*)",
      "mcp__supabase",
      "mcp__shadcn",
      "Bash(tree:*)"
    ]
  },
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": [
    "context7",
    "magicuidesign",
    "shadcn",
    "playwright",
    "supabase"
  ],
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "bash -c 'file=$(cat | jq -r .file_path); [[ \"$file\" =~ ^frontend/.*\\.(ts|tsx|js|jsx|json)$ ]] && (cd frontend && bunx biome check --write \"$file\") || true'",
            "timeout": 30
          },
          {
            "type": "command",
            "command": "bash -c 'file=$(cat | jq -r .file_path); [[ \"$file\" =~ ^supabase/functions/.*\\.ts$ ]] && deno fmt \"$file\" && deno check \"$file\" || true'",
            "timeout": 30
          },
          {
            "type": "command",
            "command": "bash -c 'file=$(cat | jq -r .file_path); [[ \"$file\" =~ ^backend-py/.*\\.py$ ]] && docker exec backend_app_py bash -c \"cd /service/app && uv run ruff format \\\"$file\\\" && uv run ruff check \\\"$file\\\"\" || true'",
            "timeout": 30
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "cd frontend && bun run build",
            "timeout": 120
          }
        ]
      }
    ]
  }
}
