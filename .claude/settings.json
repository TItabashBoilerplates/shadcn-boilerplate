{
  "permissions": {
    "allow": [
      "WebSearch",
      "WebFetch",
      "mcp__context7",
      "mcp__playwright",
      "mcp__magicuidesign",
      "Bash(bun list:*)",
      "Bash(bunx shadcn@latest add:*)",
      "Bash(bun run build:*)",
      "Bash(bun add:*)",
      "Bash(bun run lint:*)",
      "Bash(bun run format:*)",
      "Bash(bun run format-check:*)",
      "Bash(cat:*)",
      "mcp__supabase",
      "mcp__shadcn",
      "Bash(tree:*)"
    ],
    "deny": [
      "Bash(make migrate-dev:*)",
      "Bash(make migrate-deploy:*)",
      "Bash(make migration:*)"
    ]
  },
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": [
    "context7",
    "magicuidesign",
    "shadcn",
    "playwright",
    "supabase",
    "chrome-devtools"
  ],
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/quality-check.sh",
            "timeout": 120
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "supabase@claude-plugins-official": true,
    "frontend-design@claude-plugins-official": true,
    "document-skills@anthropic-agent-skills": true,
    "serena@claude-plugins-official": true,
    "cocoindex-skills@cocoindex": true,
    "example-skills@anthropic-agent-skills": true,
    "ui-design-guideline-creator@titabash-plugins": true
  }
}
