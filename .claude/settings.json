{
  "permissions": {
    "allow": [
      "WebSearch",
      "WebFetch",
      "mcp__context7",
      "mcp__playwright",
      "mcp__magicuidesign",
      "Bash(bun list:*)",
      "Bash(bunx shadcn@latest add:*)",
      "Bash(bun run build:*)",
      "Bash(bun add:*)",
      "Bash(bun run lint:*)",
      "Bash(bun run format:*)",
      "Bash(bun run format-check:*)",
      "Bash(cat:*)",
      "mcp__supabase",
      "mcp__shadcn",
      "Bash(tree:*)"
    ]
  },
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": [
    "context7",
    "magicuidesign",
    "shadcn",
    "playwright",
    "supabase"
  ],
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/format-frontend.sh",
            "timeout": 30
          },
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/format-deno.sh",
            "timeout": 30
          },
          {
            "type": "command",
            "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/format-backend-py.sh",
            "timeout": 30
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "cd frontend && bun run build",
            "timeout": 120
          }
        ]
      }
    ]
  }
}
